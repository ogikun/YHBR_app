<div class="container">
  <h2 class="text-center pb-2">Edit Profile</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize_to_fill: [200, 200]), class: "rounded-circle d-block mx-auto" %>
      <% else %>
        <%= image_tag 'no_image.png', size: "200x200", class: "rounded-circle d-block mx-auto" %>
      <% end %>
      <p class="text-center"><%= link_to "退会する", user_registration_path, method: :delete, data: { confirm: '本当に退会しますか?' } %></p>
    </div>
    <div class="col-md-4">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field pb-2">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field pb-2">
            <label for="image">Profile image</label><br>
            <%= f.file_field :avatar, id:"image" %>
          </div>
        <div class="field pb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field pb-2">
          <%= f.label :新しいパスワード %> (<%=@minimum_password_length %>文字以上）<br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field pb-2">
          <%= f.label :新しいパスワードの確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
    </div>
    <div class="col-md-2"></div>
      <div class="field col-md-12 pt-3 text-center">
        <%= f.label :情報変更のために現在のパスワードを入力してください %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="actions pt-3 d-block mx-auto">
        <%= f.submit "Update User", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
